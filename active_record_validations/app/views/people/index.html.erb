<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Terms of service</th>
      <th>Email</th>
      <th>Bio</th>
      <th>Password</th>
      <th>Registration number</th>
      <th>Points</th>
      <th>Games played</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.terms_of_service %></td>
        <td><%= person.email %></td>
        <td><%= person.bio %></td>
        <td><%= person.password %></td>
        <td><%= person.registration_number %></td>
        <td><%= person.points %></td>
        <td><%= person.games_played %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

